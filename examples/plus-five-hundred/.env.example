# Sitecore Edge Context ID (get this from your Sitecore admin)
SITECORE_EDGE_CONTEXT_ID=your-context-id-here
NEXT_PUBLIC_SITECORE_EDGE_CONTEXT_ID=your-context-id-here

# Sitecore site configuration
NEXT_PUBLIC_DEFAULT_SITE_NAME=plus-five-hundred-US
SITECORE_EDITING_SECRET=your-editing-secret-here
SITECORE_SITE_NAME=plus-five-hundred-US

# Language and region settings
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_DEFAULT_SITE=plus-five-hundred-US
NEXT_PUBLIC_DEFAULT_REGION=us

# Available languages (comma-separated)
NEXT_PUBLIC_AVAILABLE_LANGUAGES=ar,en,cn,ro

# Available regions (comma-separated)
NEXT_PUBLIC_AVAILABLE_REGIONS=us,ae,ro

# Language mappings for GraphQL queries
NEXT_PUBLIC_LANGUAGE_MAPPINGS=ar=ar-AE,ro=ro-RO,en=en,cn=cn

# Sitecore Personalize (optional)
NEXT_PUBLIC_PERSONALIZE_SCOPE=

# API timeouts (optional, in milliseconds)
PERSONALIZE_MIDDLEWARE_CDP_TIMEOUT=400
PERSONALIZE_MIDDLEWARE_EDGE_TIMEOUT=400

# Debug logging (development only)
DEBUG=content-sdk:*

# Sitecore Design Library (optional)
SITECORE_AUTH_CLIENT_ID=
SITECORE_AUTH_CLIENT_SECRET=

# Third-party API keys
NEXT_PUBLIC_FINNHUB_API_KEY=your-finnhub-api-key-here